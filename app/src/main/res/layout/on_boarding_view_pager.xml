<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/screen1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/image_width"
                android:id="@+id/iv_logo_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="@dimen/_40sdp"
                android:minHeight="@dimen/_50sdp"
                android:src="@drawable/new_logo_uoons_name"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@+id/iv_logo_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:minHeight="@dimen/_60sdp"
                android:id="@+id/iv_group"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_onboarding_screen_first_bg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/iv_group"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="@dimen/_40sdp"
                android:id="@+id/txvChooseItem"
                android:text="@string/choose_items_online"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/text_size20"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_16sdp"
                android:text="@string/onBoarding_screen_one"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txvChooseItem" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/screen2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/image_width"
                android:id="@+id/iv_name_logo2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="@dimen/_40sdp"
                android:minHeight="@dimen/_50sdp"
                android:src="@drawable/new_logo_uoons_name"/>

            <ImageView
                android:layout_width="match_parent"
                android:minHeight="@dimen/_60sdp"
                android:layout_margin="@dimen/_20sdp"
                android:id="@+id/ivOnlinePayment"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_onboarding_screen_second_bg"
                app:layout_constraintTop_toBottomOf="@+id/iv_name_logo2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>



            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/ivOnlinePayment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/txvPaymentOnline"
                android:gravity="center"
                android:layout_marginTop="@dimen/_43sdp"
                android:text="@string/payment_online"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/text_size20"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/txvPaymentOnline"
                android:layout_margin="@dimen/_16sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/onBoarding_screen_second"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size18" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:id="@+id/screen3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/image_width"
                android:id="@+id/iv_name_logo3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="@dimen/_40sdp"
                android:minHeight="@dimen/_50sdp"
                android:src="@drawable/new_logo_uoons_name"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@+id/iv_name_logo3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:minHeight="@dimen/_60sdp"
                android:id="@+id/iv_group1"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_onboarding_screen_third_bg"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/iv_group1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/_64sdp"
                android:gravity="center"
                android:id="@+id/txvWelcome"
                android:text="@string/welcome_to_uoons"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/text_size20"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/txvAppDiscription"
                app:layout_constraintTop_toBottomOf="@+id/txvWelcome"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/_16sdp"
                android:text="@string/online_item_description"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size18" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintTop_toBottomOf="@+id/txvAppDiscription"
                android:id="@+id/iv_GetStartApp"
                android:padding="@dimen/_40sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/primary_color"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:gravity="center"
                        android:text="@string/get_started"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size18"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="@dimen/_20sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        app:cardBackgroundColor="@color/primary_color_light">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_right_arraow"
                            app:tint="@color/white"/>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>