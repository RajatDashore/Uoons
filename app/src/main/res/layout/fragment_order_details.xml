<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="orderDetailsFragmentVM"
            type="com.uoons.india.ui.order.order_details.OrderDetailsFragmentVM" />
    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primary_color"
            tools:context=".ui.order.order_details.OrderDetailsFragment">

            <include layout="@layout/common_toolbar"
                android:id="@+id/toolbar"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/orderView"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/bottom_navigation_background"
                android:backgroundTint="@color/gray_bg"/>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                android:id="@+id/shimmerOrderDetailsLayout">

                <include layout="@layout/order_detail_shimmer_layout"/>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="gone"
                android:id="@+id/nestedScrollView"
                android:layout_marginTop="@dimen/_25sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cstLayout"
                        android:layout_marginBottom="@dimen/_10sdp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/crdProductOrderDetails"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_15sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12ssp"
                                    android:text="@string/order_id"
                                    android:id="@+id/orderIdText"
                                    android:textColor="@color/black"
                                    android:gravity="center_vertical"
                                    android:layout_margin="@dimen/_10sdp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:fontFamily="@font/roboto_medium"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12ssp"
                                    android:maxLines="1"
                                    android:text=""
                                    android:id="@+id/orderId"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"
                                    android:layout_margin="@dimen/_10sdp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/orderIdText"
                                    android:fontFamily="@font/roboto_medium"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:id="@+id/viewOrder"
                                    android:background="@color/gray_editext_bg"
                                    app:layout_constraintTop_toBottomOf="@id/orderIdText"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12ssp"
                                    android:text=""
                                    android:maxLines="2"
                                    android:id="@+id/txvProductName"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"
                                    android:layout_margin="@dimen/_10sdp"
                                    app:layout_constraintEnd_toStartOf="@+id/ivProductImage"
                                    app:layout_constraintTop_toBottomOf="@id/viewOrder"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:fontFamily="@font/roboto_medium"/>

                                <ImageView
                                    android:layout_width="@dimen/_70sdp"
                                    android:layout_height="@dimen/_70sdp"
                                    android:id="@+id/ivProductImage"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/image_gray_color"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_marginTop="@dimen/_7sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    app:layout_constraintTop_toBottomOf="@id/viewOrder"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12ssp"
                                    android:text=""
                                    android:id="@+id/txtProductPrice"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/grey"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    app:layout_constraintEnd_toStartOf="@+id/ivProductImage"
                                    app:layout_constraintTop_toBottomOf="@id/txvProductName"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:fontFamily="@font/roboto_medium"/>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:id="@+id/viewOffer"
                                    android:background="@color/gray_editext_bg"
                                    app:layout_constraintTop_toBottomOf="@id/ivProductImage"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Order Tracking"
                                    android:id="@+id/txvOrderTrackingText"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12ssp"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:fontFamily="@font/roboto_medium"
                                    app:layout_constraintTop_toBottomOf="@+id/viewOffer"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"/>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    app:cardCornerRadius="@dimen/_10sdp"
                                    android:layout_margin="@dimen/_10sdp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:id="@+id/crdOrdered"
                                    app:cardBackgroundColor="@color/primary_color"
                                    app:layout_constraintTop_toBottomOf="@id/txvOrderTrackingText">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        app:tint="@color/white"
                                        android:scaleType="center"
                                        android:id="@+id/ivOrderSuccess"/>
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:id="@+id/txtOrderedText"
                                    android:text=""
                                    android:textSize="@dimen/_12ssp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textColor="@color/black"
                                    app:layout_constraintStart_toEndOf="@id/crdOrdered"
                                    app:layout_constraintTop_toBottomOf="@id/txvOrderTrackingText"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:textSize="@dimen/text_size12"
                                    android:textColor="@color/grey"
                                    android:id="@+id/txvOrderDate"
                                    android:fontFamily="@font/roboto_regular"
                                    app:layout_constraintTop_toBottomOf="@+id/txtOrderedText"
                                    app:layout_constraintStart_toEndOf="@id/crdOrdered"
                                    app:layout_constraintEnd_toEndOf="parent"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_5ssp"
                                    android:textSize="@dimen/_12ssp"
                                    android:text="SHOW MORE"
                                    android:visibility="gone"
                                    android:textColor="@color/primary_color"
                                    android:id="@+id/txvShowMoreDetailsOfProducts"
                                    android:fontFamily="@font/roboto_regular"
                                    app:layout_constraintTop_toBottomOf="@+id/txvOrderDate"
                                    app:layout_constraintStart_toEndOf="@id/crdOrdered"
                                    app:layout_constraintBottom_toTopOf="@+id/viewDelivered"
                                    app:drawableRightCompat="@drawable/ic_arrow_down"
                                    app:drawableTint="@color/primary_color" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:id="@+id/viewDelivered"
                                    android:background="@color/gray_editext_bg"
                                    app:layout_constraintTop_toBottomOf="@id/txvShowMoreDetailsOfProducts"/>

                                <RatingBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/viewDelivered"
                                    android:layout_marginTop="@dimen/_7sdp"
                                    android:theme="@style/ProductRatingBar"
                                    android:id="@+id/productRating"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txvWriteAReview"
                                    android:visibility="gone"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/productRating"
                                    android:textColor="@color/primary_color"
                                    android:textSize="@dimen/text_size16"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="@string/write_a_review"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/llCancelProduct"
                            android:visibility="visible"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:cardBackgroundColor="@color/white"
                            app:layout_constraintTop_toBottomOf="@+id/crdProductOrderDetails"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    app:cardCornerRadius="@dimen/_10sdp"
                                    android:id="@+id/crdCancelProduct"
                                    android:layout_gravity="center_vertical"
                                    app:cardBackgroundColor="@color/gray_line"
                                    app:layout_constraintTop_toBottomOf="@+id/txvWriteAReview"
                                    app:layout_constraintStart_toStartOf="parent">

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:src="@drawable/ic_close"
                                        app:tint="@color/black"
                                        android:layout_gravity="center"/>
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12ssp"
                                    android:textColor="@color/black"
                                    android:id="@+id/txvCancel"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="Cancel Order" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txvMightIntrestText"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/black"
                            android:text="@string/you_might_be_also_intrested_in"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_margin="@dimen/_10sdp"
                            app:layout_constraintTop_toBottomOf="@id/llCancelProduct"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/crdIntrestedRcv"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:padding="@dimen/_20sdp"
                            app:cardBackgroundColor="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/txvMightIntrestText">

                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:splitMotionEvents="false"
                                android:id="@+id/rcvIntrestedItems" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:id="@+id/crdOrderShippingDetails"
                            app:layout_constraintTop_toBottomOf="@+id/crdIntrestedRcv">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:text="@string/shipping_details"
                                    android:id="@+id/txtShippingDetailText"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size16"
                                    android:fontFamily="@font/roboto_regular"/>


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:id="@+id/viewShippingDetails"
                                    android:background="@color/gray_editext_bg"
                                    app:layout_constraintTop_toBottomOf="@id/txtShippingDetailText"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:textSize="@dimen/text_size14"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/roboto_regular"
                                    app:layout_constraintTop_toBottomOf="@+id/viewShippingDetails"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:id="@+id/txvName"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="@dimen/text_size14"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/roboto_regular"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/txvName"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:id="@+id/txvAddress1"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="@dimen/text_size14"
                                    android:textColor="@color/black"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:fontFamily="@font/roboto_regular"
                                    app:layout_constraintTop_toBottomOf="@+id/txvAddress1"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:id="@+id/txvAddress2"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:textSize="@dimen/text_size14"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/roboto_regular"
                                    app:layout_constraintTop_toBottomOf="@+id/txvAddress2"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:id="@+id/txvCity"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="@dimen/text_size14"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/roboto_regular"
                                    app:layout_constraintTop_toBottomOf="@+id/txvCity"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:id="@+id/txvState"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:text=""
                                    android:textSize="@dimen/text_size14"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/roboto_regular"
                                    app:layout_constraintTop_toBottomOf="@+id/txvCity"
                                    app:layout_constraintStart_toEndOf="@+id/txvState"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:id="@+id/txvPincode"/>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:text=""
                                    android:textSize="@dimen/text_size14"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/roboto_regular"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/txvState"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:id="@+id/txvMobileNumber"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:id="@+id/crdOrderDetails"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/crdOrderShippingDetails">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:text="@string/price_details"
                                    android:id="@+id/txtPriceDetailText"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_size16"
                                    android:fontFamily="@font/roboto_regular"/>


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:id="@+id/viewPriceDetails"
                                    android:background="@color/gray_editext_bg"
                                    app:layout_constraintTop_toBottomOf="@id/txtPriceDetailText"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/payment_mode"
                                    android:textSize="@dimen/text_size14"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/roboto_regular"
                                    app:layout_constraintTop_toBottomOf="@+id/viewPriceDetails"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:id="@+id/txvPaymentModeText"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="@dimen/text_size14"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/roboto_regular"
                                    app:layout_constraintTop_toBottomOf="@+id/viewPriceDetails"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:id="@+id/txvPaymentMode"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/selling_price"
                                    android:textSize="@dimen/text_size14"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/roboto_regular"
                                    app:layout_constraintTop_toBottomOf="@+id/txvPaymentModeText"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:id="@+id/txvSellingPriceText"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="@dimen/text_size14"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/roboto_regular"
                                    app:layout_constraintTop_toBottomOf="@+id/txvPaymentMode"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:id="@+id/txvSellingPrice"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/discount"
                                    android:textSize="@dimen/text_size14"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/roboto_regular"
                                    app:layout_constraintTop_toBottomOf="@+id/txvSellingPriceText"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:id="@+id/txvDiscountText"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="@dimen/text_size14"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/roboto_regular"
                                    app:layout_constraintTop_toBottomOf="@+id/txvSellingPrice"
